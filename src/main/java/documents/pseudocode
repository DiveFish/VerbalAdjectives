token: any PP

boolean headFound = false;
head = PP;
while(!headFound) {
    if(head an ADJ) {
        add PP to list
        headFound = true;
    }
    else if(head is KONJ or ",")
        head = head(head);
        continue;
    else
        headFound = false;
    }
}